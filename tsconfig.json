{
  "compilerOptions": {
    "noEmit": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "noEmitOnError": true,
    "esModuleInterop": true,
    "module": "es2015",
    "moduleResolution": "bundler",
    "target": "ES6",
    "baseUrl": ".",
    "rootDirs": ["./src/", "./test/"]
  },
  "include": ["./src/**/*", "./test/**/*"],
  "exclude": ["node_modules"]
}
